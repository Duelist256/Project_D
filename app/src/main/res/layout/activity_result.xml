<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dualism.proj1.ResultActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="Result"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/result_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="91dp"
        android:text="Continue training"
        android:textSize="15sp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/result_another_training"
        android:layout_alignStart="@+id/result_another_training"
        android:layout_alignRight="@+id/result_another_training"
        android:layout_alignEnd="@+id/result_another_training"/>

    <Button
        android:id="@+id/result_another_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:textSize="15sp"
        android:text="choose another training"
        android:layout_below="@+id/result_continue"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
