<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dualism.proj1.WordTranslation">

    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Some word"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/answ1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="answ1Btn"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/answ2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word" />

    <Button
        android:id="@+id/answ2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="answ2Btn"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/answ3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answ1" />

    <Button
        android:id="@+id/answ3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="answ3Btn"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/answ4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answ2" />

    <Button
        android:id="@+id/answ4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="answ4Btn"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answ3" />
</android.support.constraint.ConstraintLayout>
