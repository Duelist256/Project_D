<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dualism.proj1.AuditionActivity">


    <Button
        android:id="@+id/audition_repeat_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/right_text_view_audition"
        android:layout_alignBottom="@+id/right_text_view_audition"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/audition_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPersonName"/>

    <TextView
        android:id="@+id/audition_right_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp"
        android:textSize="30sp"
        android:text="TextView"/>

    <Button
        android:id="@+id/audition_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:text="Next"/>
</RelativeLayout>
